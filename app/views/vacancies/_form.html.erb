<%= form_with(url: "/vacancies/#{@vacancy[:id]}", method: :post, local: true, authenticity_token: true) do |form| %>
  <% if action_name == 'edit' %>
    <%= hidden_field_tag "_method", "PUT" %>
  <% end %>

  <%= hidden_field_tag :parking_id, @vacancy[:parking_id] %>

  <div class="form-group">
    <%= form.label :code, "CÃ³digo" %>
    <%= form.text_field :code, class: "form-control", value: @vacancy[:code] %>
  </div>

  <div class="form-group">
    <%= form.label :kind, "Tipo" %>
    <%= select_tag :kind, options_for_select({
      'Small' => 'small',
